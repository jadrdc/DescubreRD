<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:paddingBottom="66dp"
        android:layout_height="wrap_content">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="26dp"
                    tools:context=".views.PlaceFoundActionFragment">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/current_location"
                   android:id="@+id/place_found_img"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/place_found_name"
                  android:text="Pico Duarte"
                  android:textSize="24sp"
                  android:layout_toRightOf="@id/place_found_img"
                  android:layout_marginLeft="12dp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:text="Calle Aida Cartagena PortalatÃ­n #6, Santo Domingo 10133"
                  android:layout_below="@id/place_found_name"
                  android:id="@+id/place_found_address"/>

        <Button android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="Agregar lugar a tus favoritos"
                android:src="@drawable/add_place"
                android:layout_below="@id/place_found_address"
                android:layout_height="wrap_content"
                android:id="@+id/btn_place_save"/>


    </RelativeLayout>
</android.support.v7.widget.CardView>
